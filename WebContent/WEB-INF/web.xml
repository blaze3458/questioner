<?xml version="1.0" encoding="UTF-8"?>
<web-app version="5.0" xmlns="https://jakarta.ee/xml/ns/jakartaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="https://jakarta.ee/xml/ns/jakartaee                       https://jakarta.ee/xml/ns/jakartaee/web-app_5_0.xsd">
 	<display-name>Questioner</display-name>
 	<description>It's a site that teachers can do exams for their students.</description>
 	<!-- SERVLETS -->
  	<servlet>
    	<servlet-name>index</servlet-name>
    	<servlet-class>com.questioner.servlet.Index</servlet-class>
  	</servlet>
  	<servlet>
    	<servlet-name>register</servlet-name>
    	<servlet-class>com.questioner.servlet.Register</servlet-class>
  	</servlet>
  	<servlet>
    	<servlet-name>logout</servlet-name>
   		<servlet-class>com.questioner.servlet.Logout</servlet-class>
  	</servlet>
  	<servlet>
    	<servlet-name>login</servlet-name>
    	<servlet-class>com.questioner.servlet.Login</servlet-class>
  	</servlet>
  	<servlet>
  		<servlet-name>profile</servlet-name>
  		<servlet-class>com.questioner.servlet.Profile</servlet-class>
  	</servlet>
  	<servlet>
  		<servlet-name>exam</servlet-name>
  		<servlet-class>com.questioner.servlet.Exam</servlet-class>
  	</servlet>
  	<servlet>
  		<servlet-name>test</servlet-name>
  		<servlet-class>com.questioner.servlet.Test</servlet-class>
  	</servlet>
  	<servlet>
  		<servlet-name>search_profile</servlet-name>
  		<servlet-class>com.questioner.servlet.SearchProfile</servlet-class>
  	</servlet>
  	<servlet>
  		<servlet-name>change_bio</servlet-name>
  		<servlet-class>com.questioner.servlet.ChangeBio</servlet-class>
  	</servlet>
  	<servlet>
  		<servlet-name>change_avatar</servlet-name>
  		<servlet-class>com.questioner.servlet.ChangeAvatar</servlet-class>
  		<multipart-config>
  			<!-- 50MB max -->
     	 	<max-file-size>52428800</max-file-size>
      		<max-request-size>52428800</max-request-size>
      		<file-size-threshold>0</file-size-threshold>
  		</multipart-config>
  	</servlet>
  	<servlet>
  		<servlet-name>find_exam</servlet-name>
  		<servlet-class>com.questioner.servlet.FindExam</servlet-class>
  	</servlet>
  	<!-- SERVLET MAPPING -->
  	<servlet-mapping>
    	<servlet-name>index</servlet-name>
    	<url-pattern>/index</url-pattern>
  	</servlet-mapping>
  	<servlet-mapping>
    	<servlet-name>register</servlet-name>
    	<url-pattern>/register</url-pattern>
  	</servlet-mapping>
  	<servlet-mapping>
    	<servlet-name>logout</servlet-name>
    	<url-pattern>/logout</url-pattern>
  	</servlet-mapping> 
  	<servlet-mapping>
    	<servlet-name>login</servlet-name>
    	<url-pattern>/login</url-pattern>
  	</servlet-mapping>
  	<servlet-mapping>
  		<servlet-name>profile</servlet-name>
  		<url-pattern>/profile</url-pattern>
  	</servlet-mapping>
  	<servlet-mapping>
  		<servlet-name>exam</servlet-name>
  		<url-pattern>/exam/*</url-pattern>
  	</servlet-mapping>
  	<servlet-mapping>
  		<servlet-name>test</servlet-name>
  		<url-pattern>/test</url-pattern>
  	</servlet-mapping>
  	<servlet-mapping>
  		<servlet-name>search_profile</servlet-name>
  		<url-pattern>/search_profile/*</url-pattern>
  	</servlet-mapping>
  	<servlet-mapping>
  		<servlet-name>change_bio</servlet-name>
  		<url-pattern>/change_bio</url-pattern>
  	</servlet-mapping>
  	<servlet-mapping>
  		<servlet-name>change_avatar</servlet-name>
  		<url-pattern>/change_avatar</url-pattern>
  	</servlet-mapping>
  	<servlet-mapping>
  		<servlet-name>find_exam</servlet-name>
  		<url-pattern>/find_exam</url-pattern>
  	</servlet-mapping>
  	<!-- FILTERS -->
  	<filter>
  		<filter-name>AuthenticationFilter</filter-name>
  		<filter-class>com.questioner.filter.AuthenticationFilter</filter-class>
  	</filter>
  	<filter>
  		<filter-name>JspFilter</filter-name>
  		<filter-class>com.questioner.filter.JspFilter</filter-class>
  	</filter>
  	<!-- FILTER MAPPING -->
  	<filter-mapping>
  		<filter-name>AuthenticationFilter</filter-name>
  		<url-pattern>/logout</url-pattern>
  		<url-pattern>/profile</url-pattern>
  		<url-pattern>/search_profile/*</url-pattern>
  		<url-pattern>/change_bio</url-pattern>
  		<url-pattern>/change_avatar</url-pattern>
  		<url-pattern>/exam/*</url-pattern>
  		<url-pattern>/find_exam</url-pattern>
  	</filter-mapping>
  	<filter-mapping>
  		<filter-name>JspFilter</filter-name>
  		<url-pattern>/*</url-pattern>
  	</filter-mapping>
  	<!-- WELCOME FILES -->	
  	<welcome-file-list>
    	<welcome-file>index</welcome-file>
  	</welcome-file-list>
  	<!-- ERROR PAGES -->
  	<error-page>
  		<error-code>404</error-code>
  		<location>/errors/404.html</location>
  	</error-page>
  	<!-- RESOURCE -->
  	<resource-env-ref>
    	<resource-env-ref-name>jdbc/questioner</resource-env-ref-name>
    	<resource-env-ref-type>jakarta.sql.DataSource</resource-env-ref-type>
	</resource-env-ref>
</web-app>